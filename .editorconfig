# EditorConfig 配置
# 统一代码格式

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,mjs}]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.svelte]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[{package.json,tsconfig.json}]
indent_style = space
indent_size = 2
